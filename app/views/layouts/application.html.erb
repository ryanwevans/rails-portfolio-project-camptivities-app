<!DOCTYPE html>
<html>
  <head>
    <title>Camptivities</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>
		<header class="header">
      Camptivities
    <h4 style="text-align:center; font-weight:300; font-size:16px; letter-spacing: 3px;">
      CONNECTING CAMP COUNSELORS WITH CAMP ACTIVITIES
    </h4>
    </header>
		<nav>
      <% if logged_in? %>
        <%= link_to "Camps", camps_path %>
        <%= link_to "Activities", activities_path %>
        <%= link_to "Assignments", assignments_path %>
        <%= link_to "My Profile", camp_counselor_path(:current_user) %>
        <% if current_user.admin %>
        <%= link_to "Create Activity", new_activity_path %>
        <%= link_to "Add Camp", new_camp_path %>
        <% end %>
        <em><%= link_to "Log Out", logout_path %></em>
        <br>
      <% end %>
		</nav>
    <main>
      <section class="todoapp">
        <%= yield %>
      </section>
    </main>
  </body>
</html>
